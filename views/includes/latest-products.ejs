<div class="block-sidebar__item">
    <div class="widget-products widget">
        <h4 class="widget__title">Bunlar da İlginizi Çekebilir</h4>
        <div class="widget-products__list">
            <% for (let product of productss) { %>
            <div class="widget-products__item">
                <div class="widget-products__image">
                    <div class="product-image">
                        <a href="/products/<%= product._id %>" class="product-image__body">
                            <img class="product-image__img" src="<%= product.picture1Path %>" alt="">
                        </a>
                    </div>
                </div>
                <div class="widget-products__info">
                    <div class="widget-products__name">
                        <a href="/products/<%= product._id %>"><%= product.label %></a>
                    </div>
                    <div class="widget-products__prices">
                        <%= product.price3 %> <%= product.currency %>
                    </div>
                </div>
            </div>
            <% } %>
        </div>
    </div>
</div>