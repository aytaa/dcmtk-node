<%- include('../includes/head'); -%>

<body>
    <!-- site -->
    <div class="site">
         <!-- mobile site__header -->
         <%- include('../includes/mobile-header'); -%>
         <!-- mobile site__header / end -->
        <!-- desktop site__header -->
        <%- include('../includes/product-header'); -%>
        <!-- desktop site__header / end -->
        <!-- site__body -->
        <div class="site__body">
            <div class="page-header">
                <div class="page-header__container container">
                    <div class="page-header__breadcrumb">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item">
                                    <a href="/">Anasayfa</a>
                                    <svg class="breadcrumb-arrow" width="6px" height="9px">
                                        <use xlink:href="images/sprite.svg#arrow-rounded-right-6x9"></use>
                                    </svg>
                                </li>
                                <li class="breadcrumb-item active" aria-current="page">İletisim</li>
                            </ol>
                        </nav>
                    </div>
                    <div class="page-header__title">
                        <h2>İletisim</h2>
                    </div>
                </div>
            </div>
            <div class="block">
                <div class="container">
                    <div class="card mb-0 contact-us">
                        <div class="contact-us__map">
                            <iframe 
                            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2998.1101421184817!2d36.33936218340552!3d41.28470729097787!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4088772874c4b24d%3A0xe599fcb65299cb43!2zQcOnxLFrIFBhemFy!5e0!3m2!1str!2str!4v1598736941248!5m2!1str!2str" 
                            frameborder='0' scrolling='no' marginheight='0' marginwidth='0'></iframe>
                        </div>
                        <div class="card-body">
                            <div class="contact-us__container">
                                <div class="row">
                                    <div class="col-12 col-lg-6 pb-4 pb-lg-0">
                                        <h4 class="contact-us__header card-title">Adres</h4>
                                        <div class="contact-us__address">
                                            <p>
                                                İstasyon, Lise Cd. no:7, 55600 İlkadım/Samsun<br>
                                                E-posta : info@acikpazaravm.com<br>
                                                İletişim : (554) 209 21 37
                                            </p>
                                            <p>
                                                <strong>Çalışma Saatleri</strong>
                                                <br>
                                                <br>
                                                Pazartesi & Cuma : 8:00- 21:00<br>
                                                Cumartesi : 10:00 - 20:00<br>
                                                Pazar : 10:00 - 20:00
                                            </p>
                                        </div>
                                    </div>
                                    <div class="col-12 col-lg-6">
                                        <h4 class="contact-us__header card-title">İletişim Formu</h4>
                                        <form>
                                            <div class="form-row">
                                                <div class="form-group col-md-6">
                                                    <label for="form-name">İsim</label>
                                                    <input type="text" id="form-name" class="form-control" placeholder="isim / soyisim">
                                                </div>
                                                <div class="form-group col-md-6">
                                                    <label for="form-email">E-posta</label>
                                                    <input type="email" id="form-email" class="form-control" placeholder="e-posta">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label for="form-subject">Konu</label>
                                                <input type="text" id="form-subject" class="form-control" placeholder="konu">
                                            </div>
                                            <div class="form-group">
                                                <label for="form-message">Mesajınız</label>
                                                <textarea id="form-message" class="form-control" rows="4"></textarea>
                                            </div>
                                            <button type="submit" class="btn btn-primary">Gönder</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- site__body / end -->
     <!-- site__footer -->
     <%- include('../includes/footer'); -%>
     <!-- site__footer / end -->
    </div>
    <!-- site / end -->
    <!-- quickview-modal -->
    <div id="quickview-modal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-xl">
            <div class="modal-content"></div>
        </div>
    </div>
    <!-- quickview-modal / end -->
    <!-- mobilemenu -->
    <%- include('../includes/mobile-menu'); -%>
    <!-- mobilemenu / end -->
    <!-- photoswipe -->
    <%- include('../includes/photoswipe'); -%>
    <!-- photoswipe / end -->
    <!-- js -->
    <%- include('../includes/script'); -%>
</body>

</html>