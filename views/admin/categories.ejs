<%- include('includes/admin-head'); -%>

<!-- Add the class .fixed to <body> for a fixed layout on large resolutions (min: 1200px) -->
<!-- <body class="fixed"> -->

<body>
    <div class="loader"></div>
    <!-- Page Container -->
    <div id="page-container">
        <!-- Header -->
        <!-- Add the class .navbar-fixed-top or .navbar-fixed-bottom for a fixed header on top or bottom respectively -->
        <!-- <header class="navbar navbar-inverse navbar-fixed-top"> -->
        <%- include('includes/admin-header'); -%>

        <!-- Inner Container -->
        <div id="inner-container">

            <%- include('includes/admin-side'); -%>
            <!-- Page Content -->
            <div id="page-content">
                <!-- Navigation info -->
                <ul id="nav-info" class="clearfix">
                    <li><a href="/admin"><i class="fa fa-home"></i></a></li>
                    <li><a href="#">Kategori İşlemleri</a></li>
                    <li class="active"><a href="">Kategori Listesi</a></li>
                </ul>
                <!-- END Navigation info -->

                <!-- Datatables -->
                <h3 class="page-header page-header-top">Kategori Listesi</h3>

                <a href="/admin/add-category" style="left: 12em;" class="btn btn-success"><i class="fa fa-plus"></i>
                    Yeni Kategori Ekle</a>
                <br>
                <br>
                <table id="example-datatables" class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th class="cell-small"></th>
                            <th><i class="fa fa-barcode"></i> Kategori ID</th>
                            <th><i class="fa fa-user"></i> Kategori İsmi</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for (let devCategories of categories) { %>
                        <tr>
                            <td class="text-center">
                                <div class="btn-group">
                                    <a href="/admin/categories/<%= devCategories._id %>" data-toggle="tooltip"
                                        title="Düzenle" class="btn btn-xs btn-success"><i class="fa fa-pencil"></i></a>
                                    <a data-toggle="modal" data-target="#exampleModal<%= devCategories._id %>"
                                        class="btn btn-xs btn-danger"><i class="fa fa-times"></i></a>
                                </div>
                            </td>
                            <td><%= devCategories._id %></td>
                            <td><%= devCategories.name %></td>
                        </tr>
                        <div class="modal fade" id="exampleModal<%= devCategories._id %>" tabindex="-1" role="dialog"
                            aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <form action="/admin/delete-category" method="POST">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                            <input type="hidden" name="categoryid" value="<%= devCategories._id %>">
                                            <h5 class="modal-title" id="exampleModalLabel">Dikkat !</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <strong><%= devCategories.name %></strong> adlı kategoriyi silmek
                                            istediğinizden emin misiniz ?
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-success" data-dismiss="modal"><i
                                                    class="fa fa-times"></i> Vazgeç</button>
                                            <button type="submit" class="btn btn-danger"><i class="fa fa-trash"></i>
                                                Sil</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <% } %>
                    </tbody>
                </table>
                <!-- END Datatables -->

            </div>
            <!-- END Page Content -->

            <!-- Footer -->
            <footer>
                <span id="year-copy"></span> &copy; <strong><a href="http://goo.gl/9QhXQ">uAdmin 2.1</a></strong> -
                Crafted with <i class="fa fa-heart text-danger"></i> by <strong><a href="http://goo.gl/vNS3I"
                        target="_blank">pixelcave</a></strong>
            </footer>
            <!-- END Footer -->
        </div>
        <!-- END Inner Container -->
    </div>
    <!-- END Page Container -->

    <!-- Scroll to top link, check main.js - scrollToTop() -->
    <a href="javascript:void(0)" id="to-top"><i class="fa fa-chevron-up"></i></a>

    <!-- User Modal Settings, appears when clicking on 'User Settings' link found on user dropdown menu (header, top right) -->
    <%- include('includes/user-modal'); -%>

    <%- include('includes/admin-script'); -%>


</body>

</html>