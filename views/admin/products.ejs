<%- include('includes/admin-head'); -%>

<!-- Add the class .fixed to <body> for a fixed layout on large resolutions (min: 1200px) -->
<!-- <body class="fixed"> -->

<body>
    <div class="loader"></div>
    <!-- Page Container -->
    <div id="page-container">
        <!-- Header -->
        <!-- Add the class .navbar-fixed-top or .navbar-fixed-bottom for a fixed header on top or bottom respectively -->
        <!-- <header class="navbar navbar-inverse navbar-fixed-top"> -->
        <%- include('includes/admin-header'); -%>

        <!-- Inner Container -->
        <div id="inner-container">

            <%- include('includes/admin-side'); -%>
            <!-- Page Content -->
            <div id="page-content">
                <!-- Navigation info -->
                <ul id="nav-info" class="clearfix">
                    <li><a href="/admin"><i class="fa fa-home"></i></a></li>
                    <li><a href="javascript:void(0)">Ürün İşlemleri</a></li>
                    <li class="active"><a href="">Ürün Listesi</a></li>
                </ul>
                <!-- END Navigation info -->

                <!-- Datatables -->
                <h3 class="page-header page-header-top">Ürün Listesi</h3>

                <table id="example-datatables" class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th class="cell-small"></th>
                            <th><i class="fa fa-barcode"></i> Barkodu</th>
                            <th><i class="fa fa-user"></i> İsmi</th>
                            <th><i class="fa fa-user"></i> Kategorisi</th>
                            <th><i class="fa fa-user"></i> Stok Adedi </th>
                            <th><i class="fa fa-user"></i> Markası</th>
                            <th><i class="fa fa-user"></i> Satış Fiyatı</th>
                            <th><i class="fa fa-bolt"></i> Ürün Onayı</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for (let devProducts of products) { %>
                        <tr>
                            <td class="text-center">
                                <div class="btn-group">
                                    <a href="/products/<%= devProducts.id %>" data-toggle="tooltip" title="Düzenle"
                                        class="btn btn-xs btn-success"><i class="fa fa-pencil"></i></a>
                                    <a href="/admin/products/<%= devProducts.id %>" data-toggle="tooltip" title="Sil"
                                        class="btn btn-xs btn-danger"><i class="fa fa-times"></i></a>
                                </div>
                            </td>
                            <td><%= devProducts.barcode %></td>
                            <td><%= devProducts.title %></td>
                            <td><%= devProducts.categoryName %></td>
                            <% if (devProducts.quantity <= 10) { %>
                                <td style="color: brown;"><%= devProducts.quantity %></td>
                                <%} else { %>
                                    <td><%= devProducts.quantity %></td>
                                <% } %>
                            <td><%= devProducts.brand %></td>
                            <td><%= devProducts.salePrice %>.00 ₺</td>
                            <% if (devProducts.approved == true) { %>
                            <td><span class="label label-success">Onaylı</span></td>
                            <%} else { %>
                            <td><span class="label label-danger">Onaysız</span></td>
                            <% } %>
                        </tr>
                        <% } %>
                    </tbody>
                </table>
                <!-- END Datatables -->

            </div>
            <!-- END Page Content -->

            <!-- Footer -->
            <footer>
                <span id="year-copy"></span> &copy; <strong><a href="http://goo.gl/9QhXQ">uAdmin 2.1</a></strong> -
                Crafted with <i class="fa fa-heart text-danger"></i> by <strong><a href="http://goo.gl/vNS3I"
                        target="_blank">pixelcave</a></strong>
            </footer>
            <!-- END Footer -->
        </div>
        <!-- END Inner Container -->
    </div>
    <!-- END Page Container -->

    <!-- Scroll to top link, check main.js - scrollToTop() -->
    <a href="javascript:void(0)" id="to-top"><i class="fa fa-chevron-up"></i></a>

    <!-- User Modal Settings, appears when clicking on 'User Settings' link found on user dropdown menu (header, top right) -->
    <%- include('includes/user-modal'); -%>

    <%- include('includes/admin-script'); -%>

</body>

</html>