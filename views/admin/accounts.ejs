<%- include('includes/admin-head'); -%>

<!-- Add the class .fixed to <body> for a fixed layout on large resolutions (min: 1200px) -->
<!-- <body class="fixed"> -->

<body>
    <div class="loader"></div>
    <!-- Page Container -->
    <div id="page-container">
        <!-- Header -->
        <!-- Add the class .navbar-fixed-top or .navbar-fixed-bottom for a fixed header on top or bottom respectively -->
        <!-- <header class="navbar navbar-inverse navbar-fixed-top"> -->
        <%- include('includes/admin-header'); -%>

        <!-- Inner Container -->
        <div id="inner-container">

            <%- include('includes/admin-side'); -%>
            <!-- Page Content -->
            <div id="page-content">
                <!-- Navigation info -->
                <ul id="nav-info" class="clearfix">
                    <li><a href="/admin"><i class="fa fa-home"></i></a></li>
                    <li><a href="javascript:void(0)">Kullanıcı İşlemleri</a></li>
                    <li class="active"><a href="">Kullanıcı Listesi</a></li>
                </ul>
                <!-- END Navigation info -->

                <!-- Datatables -->
                <h3 class="page-header page-header-top">Kullanıcı Listesi
                    <button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#addUser">
                        <i class="fa fa-plus"></i> Yeni Kullanıcı
                      </button>
                </h3>
                <div class="modal fade" id="addUser" tabindex="-1" role="dialog" aria-labelledby="addUser" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                      <div class="modal-content">
                        <div class="modal-header">
                          <h5 class="modal-title" id="exampleModalLabel">Yeni Kullanıcı</h5>
                          <br>
                        </div>
                        <div class="modal-body">
                          <form action="/new-user" method="POST">
                              <div class="form-group"> 
                                  <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                  <label for="name">İsim / Soyisim</label>
                                  <input type="text" class="form-control" required name="name" id="name" placeholder="isim / soyisim">
                              </div>
                              <div class="form-group">
                                  <label for="email">E-posta</label>
                                  <input type="email" class="form-control" required name="email" id="email" placeholder="e-posta">
                              </div>
                              <div class="form-group">
                                  <label for="password">Şifre</label>
                                  <input type="password" class="form-control" required name="password" id="password" placeholder="şifre">
                              </div>
                              <div class="form-group">
                                  <label for="check-user">Kullanıcı Grubu</label>
                                  <select class="form-control">
                                    <option selected >Seçiniz</option>
                                    <option>Yönetici</option>
                                    <option>Kullanıcı</option>
                                  </select>
                              </div>
                        </div>
                        <div class="modal-footer">
                          <button type="button" class="btn btn-danger" data-dismiss="modal"><i class="fa fa-times"></i> Vazgeç</button>
                          <button type="submit" class="btn btn-primary"><i class="fa fa-floppy-o"></i> Kaydet</button>
                        </div>
                     </form>
                      </div>
                    </div>
                  </div>
                <table id="example-datatables" class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th class="cell-small"></th>
                            <th><i class="fa fa-barcode"></i> Kullanıcı ID</th>
                            <th><i class="fa fa-user"></i> Kullanıcı Adı/Soyadı</th>
                            <th><i class="fa fa-check"></i> Durumu </th>
                            <th><i class="fa fa-calendar"></i> Kayıt Tarihi </th>
                            <th><i class="fa fa-envelope"></i> E-posta </th>
                            <th><i class="fa fa-th"></i> Kullanıcı Grubu </th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for (let devAccounts of accounts) { %>
                        <tr>
                            <td class="text-center">
                                <div class="btn-group">
                                    <a type="button" class="btn btn-success btn-xs" data-toggle="modal"
                                        data-target="#editModal<%= devAccounts._id %>">
                                        <i class="fa fa-pencil"></i></a>
                                    <a type="button" class="btn btn-danger btn-xs" data-toggle="modal"
                                        data-target="#deleteModal<%= devAccounts._id %>">
                                        <i class="fa fa-times"></i></a>
                                </div>
                            </td>
                            <td><%= devAccounts._id %></td>
                            <td><%= devAccounts.name %></td>
                            <% if (devAccounts.status === true ) { %>
                            <td>Aktif</td>
                            <%} else { %>
                            <td>Pasif</td>
                            <% } %>
                            <td><%= devAccounts.createdAt.toLocaleString() %></td>
                            <td><%= devAccounts.email %></td>
                            <% if (devAccounts.isAdmin === true ) { %>
                            <td>Admin</td>
                            <%} else { %>
                            <td>Kullanıcı</td>
                            <% } %>
                        </tr>
                        <!-- Edit User Modal -->
                        <div class="modal fade" id="editModal<%= devAccounts._id %>" tabindex="-1" role="dialog"
                            aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h4 class="modal-title" id="exampleModalLabel">
                                            <h4><%= devAccounts.name %> adlı kullanıcıyı düzenliyorsunuz !</h4>
                                        </h4>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        <form>
                                            <div class="form-group">
                                                <label for="exampleInputEmail1">E-posta</label>
                                                <input type="email" class="form-control"
                                                    value="<%= devAccounts.email %>" placeholder="e-posta">
                                            </div>
                                            <div class="form-group">
                                                <label for="exampleInputEmail1">İsim / Soyisim</label>
                                                <input type="text" class="form-control" value="<%= devAccounts.name %>"
                                                    aria-describedby="name" placeholder="isim / soyisim">
                                            </div>
                                            <div class="form-group">
                                                <label for="exampleInputPassword1">Şifre</label>
                                                <input type="password" class="form-control" id="password"
                                                    placeholder="şifre">
                                                <small id="emailHelp" class="form-text text-muted">şifreni kimseye
                                                    söyleme.</small>
                                            </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-danger" data-dismiss="modal"><i
                                                class="fa fa-times"></i> Vazgeç</button>
                                        <button type="submit" class="btn btn-primary"><i class="fa fa-floppy-o"></i>
                                            Kaydet</button>
                                    </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <!-- Delete User Modal -->
                        <div class="modal fade" id="deleteModal<%= devAccounts._id %>" tabindex="-1" role="dialog"
                            aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h4 class="modal-title" id="exampleModalLabel">
                                            <h4><%= devAccounts.name %> adlı kullanıcıyı siliyorsunuz !</h4>
                                        </h4>
                                        </button>
                                    </div>
                                    <form action="/account/delete" method="POST">
                                        <div class="modal-body">
                                            <strong style="color: red;"><%= devAccounts.name %></strong> adlı
                                            kullanıcıyı silmek istediğinize emin misiniz ?
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-warning" data-dismiss="modal"><i
                                                    class="fa fa-times"></i> Vazgeç</button>
                                            <button type="submit" class="btn btn-danger"><i class="fa fa-trash"></i>
                                                Sil</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <% } %>
                    </tbody>
                </table>
                <!-- END Datatables -->

            </div>
            <!-- END Page Content -->

            <!-- Footer -->
            <footer>
                <span id="year-copy"></span> &copy; <strong><a href="http://goo.gl/9QhXQ">doobles 2.1</a></strong> -
                Crafted with <i class="fa fa-heart text-danger"></i> by <strong><a href="http://goo.gl/vNS3I"
                        target="_blank">aunal</a></strong>
            </footer>
            <!-- END Footer -->
        </div>
        <!-- END Inner Container -->
    </div>
    <!-- END Page Container -->

    <!-- Scroll to top link, check main.js - scrollToTop() -->
    <a href="javascript:void(0)" id="to-top"><i class="fa fa-chevron-up"></i></a>

    <!-- User Modal Settings, appears when clicking on 'User Settings' link found on user dropdown menu (header, top right) -->
    <%- include('includes/user-modal'); -%>

    <%- include('includes/admin-script'); -%>

</body>

</html>